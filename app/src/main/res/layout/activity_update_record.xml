<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateRecord"
    android:background="@color/white"
    android:filterTouchesWhenObscured="true">

    <!--  Customised toolbar layout -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!--  Title  -->
    <TextView
        android:id="@+id/updateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Update Record"
        android:textColor="@color/black"
        android:textSize="28sp" />


    <ScrollView
        android:id="@+id/updateScrollView"
        android:layout_width="match_parent"
        android:layout_height="470dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--name-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customer_input"
                    android:hint="Name"

                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--email-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/customer_input"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--Password-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/customer_input"
                    android:hint="Password"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Web Link-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dropdownText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_input_webLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/customer_input"
                    android:hint="Web link"
                    android:inputType="textShortMessage" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/update_input_Logo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/customer_input">

                <ImageView
                    android:id="@+id/update_imageLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="-42dp"
                    android:background="@drawable/circle_photo"
                    tools:visibility="visible" />

                <Spinner
                    android:id="@+id/spinner_icon"
                    android:layout_width="290dp"
                    android:layout_height="65dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-55dp"
                    android:contentDescription="dropdown"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Note-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_input_Note"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/customer_input"
                    android:hint="Note"
                    android:inputType="textLongMessage" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </ScrollView>


    <!--Add Button-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateRecord"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:onClick="confirmInput"
        android:layout_gravity="center_horizontal"
        android:text="Update record"
        android:textAllCaps="false"
        android:shadowColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginTop="10dp"
        android:textColor="@color/white" />

</LinearLayout>